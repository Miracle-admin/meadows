<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>AlphaUserPoints - Monthly statistics</name>
	<author>Bernard Gilly</author>
	<creationDate>2015 october 13</creationDate>
	<copyright>Copyright (C) 2008-2015. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>www.alphaplug.com</authorEmail>
	<authorUrl>http://www.alphaplug.com</authorUrl>
	<version>2.0.4</version>
	<description>Monthly statistics</description>
	<languages>
		<language tag="en-GB">en-GB.mod_alphauserpoints_monthly_stats.ini</language>
		<language tag="fr-FR">fr-FR.mod_alphauserpoints_monthly_stats.ini</language>
	</languages>
	<files>
		<filename module="mod_alphauserpoints_monthly_stats">mod_alphauserpoints_monthly_stats.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<config>
	 <fields name="params">
	  <fieldset name="basic">
		<field name="moduleclass_sfx" type="text" default="" label="MODAUP_MS_CLASSSUFFIX" description="MODAUP_MS_CLASSSUFFIXDESC" />
		<field name="count" type="text" default="5" label="MODAUP_MS_COUNT" description="MODAUP_MS_COUNTDESC" />
		<field name="showheader" type="radio" class="radio btn-group" default="1" label="MODAUP_MS_SHOWTABLEHEADER" description="MODAUP_MS_SHOWTABLEHEADER">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="showbar" type="radio" class="radio btn-group" default="1" label="MODAUP_MS_SHOWGRAPHICBAR" description="MODAUP_MS_SHOWGRAPHICBAR">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="usrname" type="radio" class="radio btn-group" default="name" label="MODAUP_MS_USRNAME" description="MODAUP_MS_USRNAMEDESC">
			<option value="name">MODAUP_MS_NAME</option>
			<option value="username">MODAUP_MS_USERNAME</option>
		</field>      
		</fieldset>
   </fields>	
	</config>
</extension>