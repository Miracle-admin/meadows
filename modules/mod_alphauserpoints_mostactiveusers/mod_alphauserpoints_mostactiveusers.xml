<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>AlphaUserPoints - Most Active Users</name>
	<author>Bernard Gilly</author>
	<creationDate>2015 october 13</creationDate>
	<copyright>Copyright (C) 2008-2015. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>www.alphaplug.com</authorEmail>
	<authorUrl>http://www.alphaplug.com</authorUrl>
	<version>2.0.4</version>
	<description>Most active users with total points.</description>
	<languages>
		<language tag="en-GB">en-GB.mod_alphauserpoints_mostactiveusers.ini</language>
		<language tag="fr-FR">fr-FR.mod_alphauserpoints_mostactiveusers.ini</language>
		<language tag="fi-FI">fi-FI.mod_alphauserpoints_mostactiveusers.ini</language>
		<language tag="es-ES">es-ES.mod_alphauserpoints_mostactiveusers.ini</language>
	</languages>
	<files>
		<filename module="mod_alphauserpoints_mostactiveusers">mod_alphauserpoints_mostactiveusers.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<config>
	 <fields name="params">
	  <fieldset name="basic">
		<field name="moduleclass_sfx" type="text" default="" label="MODAUP_CLASSSUFFIX" description="MODAUP_CLASSSUFFIXDESC" />
		<field name="count" type="text" default="5" label="MODAUP_COUNT" description="MODAUP_COUNTDESC" />
		<field name="usrname" type="radio" class="radio btn-group" default="name" label="MODAUP_USRNAME" description="MODAUP_USRNAMEDESC">
			<option value="name">MODAUP_NAME</option>
			<option value="username">MODAUP_USERNAME</option>
		</field>
		<field name="showavatar" type="radio" class="radio btn-group" default="0" label="MODAUP_SHOW_AVATAR" description="MODAUP_SHOW_AVATAR">
			<option value="0">MODAUP_NO</option>
			<option value="1">MODAUP_YES</option>
		</field>
		</fieldset>
   </fields>	
	</config>
</extension>