<?xml version="1.0" encoding="utf-8"?>
<extension	type="module" ersion="3.0"	client="site"	method="upgrade">
	<name>JBusinessDirectory - Events</name>
	<creationDate>August 2015</creationDate>
	<author>CMSJunkie</author>
	<copyright>(C) CMSJunkie. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>info@cmsjunkie.com</authorEmail>
	<authorUrl>www.cmsjunkie.com</authorUrl>
	<version>1.0.0</version>	
	<description>JBusinessDirectory Events Module - Dispaly the events based on selected criterias</description>
	
	<files>
		<filename module="mod_jbusiness_events">mod_jbusiness_events.php</filename>
		<folder>assets</folder>
		<folder>models</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_jbusiness_events.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" >
		
				<field
					name="count"
					type="text"
					default="5"
					label="Number of events"
					description="Number of events that will be displayed" />

				<field
					name="only_featured"
					type="radio"
					class="btn-group"
					default="0"
					label="Only featured"
					description="Show only featurd businesses">
					<option
						value="1">JYES</option>
					<option
						value="0">JNO</option>
				</field>
				
				<field
					name="order"
					type="radio"
					class="btn-group"
					default="0"
					label="Ordering"
					description="Set ordering for diplaying latest business listings">
					<option
						value="1">Creation date</option>
					<option
						value="0">Random</option>
				</field>

				<field
					name="itemId"
					type="text"
					default="0"
					label="Itemid"
					description="The Itemid associated with events" />
			</fieldset>

			<fieldset
				name="advanced">

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
