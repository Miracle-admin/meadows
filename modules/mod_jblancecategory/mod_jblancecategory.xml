<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_jblancecategory</name>
	<creationDate>28 March 2012</creationDate>
	<author>JoomBri Team</author>
	<copyright>Copyright (C) 2012 - 2015 BriTech Solutions. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@joombri.in</authorEmail>
	<authorUrl>www.joombri.in</authorUrl>
	<version>1.0.0</version>
	<description>MOD_JBLANCE_DESC_CATEGORY_MODULE</description>

	<files>
		<filename module="mod_jblancecategory">mod_jblancecategory.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_jblancecategory.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_jblancecategory.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="total_column" type="text" class="input-mini" default="3" label="MOD_JBLANCE_LABEL_NO_OF_COLUMNS" description="MOD_JBLANCE_DESC_NO_OF_COLUMNS"></field>
				<field name="show_count" type="radio" class="btn-group btn-group-yesno" default="1" label="MOD_JBLANCE_LABEL_SHOW_COUNT" description="MOD_JBLANCE_DESC_SHOW_COUNT">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="show_empty_count" type="radio" class="btn-group btn-group-yesno" default="1" label="MOD_JBLANCE_LABEL_SHOW_EMPTY_COUNT" description="MOD_JBLANCE_DESC_SHOW_EMPTY_COUNT">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="set_itemid" type="menuitem" default="101" label="MOD_JBLANCE_LABEL_SET_ITEMID" description="MOD_JBLANCE_LABEL_SET_ITEMID" />
        	</fieldset>
			
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
