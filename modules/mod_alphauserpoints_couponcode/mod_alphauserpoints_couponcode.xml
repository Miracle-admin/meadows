<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>AlphaUserPoints - Coupon Code</name>
	<author>Bernard Gilly</author>
	<creationDate>2015 october 13</creationDate>
	<copyright>Copyright (C) 2008-2015. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>www.alphaplug.com</authorEmail>
	<authorUrl>http://www.alphaplug.com</authorUrl>
	<version>2.0.4</version>
	<description>Allow user to enter a coupon code for earn extra points with AlphaUserPoints v.1.9.x and later</description>
	<languages>
		<language tag="en-GB">en-GB.mod_alphauserpoints_couponcode.ini</language>
		<language tag="fr-FR">fr-FR.mod_alphauserpoints_couponcode.ini</language>
	</languages>
	<files>
		<filename module="mod_alphauserpoints_couponcode">mod_alphauserpoints_couponcode.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<config>
	<fields name="params">
  	<fieldset name="basic">
  		<field name="moduleclass_sfx" type="text" default="" label="MODAUP_CP_CLASSSUFFIX" description="MODAUP_CP_CLASSSUFFIXDESC" />
      <field name="textbefore" type="text" default="" label="MODAUP_CP_TEXTBEFOREINPUT" description="MODAUP_CP_TEXTBEFOREINPUTDESC" />
      <field name="textafter" type="text" default="" label="MODAUP_CP_TEXTAFTERINPUT" description="MODAUP_CP_TEXTAFTERINPUTDESC" />
    </fieldset>
  </fields>  
	</config>
</extension>